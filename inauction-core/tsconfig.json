
{
    "compilerOptions": {
       "module": "commonjs",
       "moduleResolution": "node",
       "noImplicitAny": false,
       "resolveJsonModule":true ,
       "esModuleInterop": true,
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "allowJs": true,
       "pretty": true,
       "target": "es6",
       "outDir": "dist",
       "baseUrl": "lib",
       "rootDir": "lib",
       "typeRoots" : ["node_modules/@types"]
    },
    "include": [
       "lib/**/*.ts"
    ],
    "exclude": [
       "node_modules"
    ]
 }
